<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:windowNoTitle">true</item>-->
       <!-- <item name="windowActionBar">false</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="HaveActionBar" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- 让actionbar漂浮 -->
        <item name="android:windowActionBarOverlay">true</item>
        <!-- 去掉ActionBar与Activity之间的蓝色横线 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/ActionbarStyle</item>
    </style>

    <style name="ActionbarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <!-- 设置actionbar 背景色 透明 -->
        <item name="android:background">#f5ad77</item>
        <item name="android:backgroundStacked">#f5ad77</item>
        <item name="android:backgroundSplit">#f5ad77</item>
    </style>






</resources>
